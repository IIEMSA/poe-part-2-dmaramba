@model ClaimViewModel

@{
    ViewData["Title"] = "Add new Claim";
}
     <form method="post"  asp-controller="Lecturer" asp-action="AddClaim" enctype="multipart/form-data">​
                  @if (!String.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-danger">
            @ViewBag.Message
    </div>
    }
  
    <div class="form-group">
        <label class="fs-6 form-label fw-bold text-dark">Course</label>
     
        <select class="form-select form-select-solid" data-control="select2" asp-for="CourseId" asp-items="Model.Courses" data-hide-search="false">
            <option value="0">Please select</option>
        </select> 
    </div>
    <div class="form-group">
        <label class="fs-6 form-label fw-bold text-dark">Class</label>
        <!--begin::Select-->
        <select class="form-select form-select-solid" data-control="select2" asp-for="ClassId" asp-items="Model.Classes" data-hide-search="false">
            <option value="0">Please select</option>
        </select> 
    </div>
    <div class="form-group">
         <label class="fs-6 form-label fw-bold text-dark">Number of hours</label>
        <input asp-for="Hours" >
    </div>
    <div class="form-group">
         <label class="fs-6 form-label fw-bold text-dark">Supporting documents</label>
        <input type="file" asp-for="File"   class="form-control" >
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
    </div>
</form>
